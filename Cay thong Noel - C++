#include <iostream>
#include <cstring>

using namespace std;

void main(void)
{
	int n;
	do
	{
		cout << "Nhap vao so n la canh cua ma tran la so le: ";
		cin >> n;
	} while (n % 2 == 0 || n < 5);


	for (int i = 0; i < n / 2 + 1; i++)
	{
		for (int j = 0;j < n; j++)
		{
			if (j == n / 2 - i)
			{
				for (int k = n / 2 - i; k <= n / 2 + i; k++)
				{
					cout << "*";
				}
			}
			else
				cout << " ";
		}
		cout << endl;
	}


	int k;
	if (n <= 21)
		k = 1;
	else if (n > 21 && n <= 41)
		k = 3;
	else
		k = 5;


	for (int i = 0; i < n / 2; i++)
	{
		for (int j = 0; j < n; j++)
		{
			if (j >= n / 2 - k && j <= n / 2 + k)
				cout << "*";
			else
				cout << " ";

		}
		cout << endl;
}
}
