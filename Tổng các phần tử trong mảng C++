#include<iostream>
using namespace std;

void Sum(int a[],int &n){
	cout<<"enter the length of the array (1<= N <=100): ";
	cin>>n;
	int count=0;
	if (n<1 or n>100) 
	cout<<"enter again please";
	else{
	cout<<"enter every element: ";
	for (int i=0;i<n;i++){
		cin>>a[i];
		}
	int Sum =0;
	for (int i=0; i<n;i++)
		Sum+=a[i];
	cout<<"tong cac phan tu trong mang la: "<<Sum;
}
}
int main() {
	int a[100],n;
	Sum(a,n);
	return 0;
}
